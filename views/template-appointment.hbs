    <style type="text/css">
        body {
            margin: 0;
            padding: 0;
            min-width: 100% !important;
            color: #ffffff;
            font-family: 'Kreon';
        }

        img { height: auto; }
        .content { width: 900px; max-width: 900px }
        .header { border-top-right-radius: 15px; border-top-left-radius: 15px; padding: 30px; }
        .innerpadding { padding: 30px 30px 30px 30px; }
        .borderbottom { border-bottom: 1px solid #f2eeed; }
        .container-burbuja { width: 100%; height: auto; }
        .burbuja-top {
            width: 80%;
            height: auto;
            background-color: red;
            border-radius: 20px;
            margin: 0 auto;
            padding: 10px 20px;
        }
        .burbuja-bottom {
            width: 0;
            height: 0;
            border-left: 20px solid transparent;
            border-right: 20px solid transparent;
            border-top: 20px solid #f00;
            margin: 0 auto;
        }
        .icon { width: 20%; }
        .text { width: 80%; }
        .info { padding-top: 10%; }
        p { color: #ffffff; text-align: justify; font-size: 18px; }
        .informacion { padding: 10% 0px; }
        .calendar-icon { width: 50%; }
        .description-email {  max-width: 100%;  }
        .body { border-bottom-right-radius: 15px; border-bottom-left-radius: 15px; }

        @media only screen and (max-width: 550px),
        screen and (max-device-width: 550px) {
            body[yahoo] .hide {
                display: none !important;
            }
            body[yahoo] .buttonwrapper {
                background-color: transparent !important;
            }
            body[yahoo] .button {
                padding: 0px !important;
            }
            body[yahoo] .button a {
                background-color: #e05443;
                padding: 15px 15px 13px !important;
            }
            body[yahoo] .unsubscribe {
                display: block;
                margin-top: 20px;
                padding: 10px 50px;
                background: #2f3942;
                border-radius: 5px;
                text-decoration: none !important;
                font-weight: bold;
            }
        }

        @media only screen and (max-width: 700px),
        screen and (max-device-width: 700px) {
            .col425 { max-width: 100% !important; }
            .icon { max-width: 70% !important; }
            .description-email{ max-width: 100% !important; }
            .text { padding-right: 10%; }
            .calendar-icon { width: 30% !important; }
            .personaje-animado { padding-top: 10%; }
            p { font-size: 30px !important; }
        }
        

        
    </style>
</head>

